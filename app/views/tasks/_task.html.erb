<div class="card mb-3" id="task-<%= task.id %>">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center">
      <div><%= task.content %></div>
      <div>
        <%= link_to '編集', edit_task_path(task), class: 'btn btn-success' %>
        <%= link_to '削除', task_path(task), class: 'btn btn-danger', method: :delete, data: { confirm: '削除しますか？' } %>
      </div>
    </div>
  </div>
</div>
